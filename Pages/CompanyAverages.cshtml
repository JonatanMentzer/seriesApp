@page
@model Series.Pages.CompanyAveragesModel
@{
    ViewData["Title"] = "Average Ratings per Company";
    Layout = "_Layout";
}

<h2>Average Ratings per Company</h2>

<table>
    <thead>
        <tr>
            <th>Company</th>
            <th>
                <a href="CompanyAverages?sortOrder=@(Model.SortOrder == "asc" ? "desc" : "asc")"
                   style="text-decoration:none; color:white;">
                    Rating @(Model.SortOrder == "asc" ? "↑" : "↓")
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.CompanyAverages)
        {
            <tr>
                <td>@c.Company</td>
                <td>@c.AverageRating.ToString("0.00")</td>
            </tr>
        }
    </tbody>
</table>
