@page
@model Series.Pages.CreatorAveragesModel
@{
    ViewData["Title"] = "Average Ratings per Creator";
    Layout = "_Layout";
}

<h2>Average Ratings per Creator</h2>

<p>
    <a href="?sortOrder=asc">Sort Ascending ↑</a> |
    <a href="?sortOrder=desc">Sort Descending ↓</a>
</p>

<table>
    <thead>
        <tr>
            <th>Creator</th>
            <th>Average Rating</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model.CreatorAverages)
        {
            <tr>
                <td>@c.CreatorName</td>
                <td>@c.AverageRating.ToString("0.00")</td>
            </tr>
        }
    </tbody>
</table>
