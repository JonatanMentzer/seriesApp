@page
@model Series.Pages.GenreAveragesModel

@{
    ViewData["Title"] = "Average Ratings per Genre";
    Layout = "_Layout";
}

<h2>Average Ratings per Genre</h2>

<table>
    <thead>
        <tr>
            <th>Genre</th>
            <th>
                <a href="GenreAverages?sortOrder=@(Model.SortOrder == "asc" ? "desc" : "asc")"
                   style="text-decoration:none; color:white;">
                    Rating @(Model.SortOrder == "asc" ? "↑" : "↓")
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var g in Model.GenreAverages)
        {
            <tr>
                <td>@g.GenreName</td>
                <td>@g.AverageRating.ToString("0.00")</td>
            </tr>
        }
    </tbody>
</table>
